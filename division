<!DOCTYPE html>
<html>
<head>
<title>Division Game</title>
<style>
body { font-family: sans-serif; }
#game { width: 400px; margin: 50px auto; text-align: center; }
</style>
</head>
<body>

<div id="game">
  <h1>Division Fun!</h1>
  <p>What is <span id="dividend"></span> รท <span id="divisor"></span> = ?</p>
  <input type="number" id="answer" step="0.01">
  <button onclick="checkAnswer()">Check Answer</button>
  <p id="result"></p>
</div>

<script>
  let dividend, divisor;
  
  function generateProblem() {
    // Generate divisor first (1-10)
    divisor = Math.floor(Math.random() * 10) + 1;
    
    // Generate dividend that's divisible by the divisor to ensure clean division
    // Multiply divisor by a random number between 1 and 10
    let multiplier = Math.floor(Math.random() * 10) + 1;
    dividend = divisor * multiplier;
    
    document.getElementById("dividend").innerText = dividend;
    document.getElementById("divisor").innerText = divisor;
    document.getElementById("answer").value = ""; // Clears the answer field
    document.getElementById("result").innerText = ""; // Clears the result message
  }

  function checkAnswer() {
    let userAnswer = parseFloat(document.getElementById("answer").value);
    let correctAnswer = dividend / divisor;
    
    // Compare with small tolerance for floating point errors
    if (Math.abs(userAnswer - correctAnswer) < 0.01) {
      document.getElementById("result").innerText = "Correct!";
      generateProblem(); // Generates a new problem after correct answer
    } else {
      document.getElementById("result").innerText = "Try again!";
    }
  }

  // Initialize the game
  generateProblem();
</script>

</body>
</html>
